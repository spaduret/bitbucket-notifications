{
  "manifest_version": 2,
  "name": "Bitbucket Notifications",
  "version": "0.1",
  "description": "Bitbucket Notifications",
  "browser_action": {
    "default_icon": "/bitbucket512_rounded.png",
    "default_popup": "/index.html"
  },
  "options_ui": {
    "page": "/index.html#options",
    "open_in_tab": true
  },
  "background": {
    "page": "/index.html#background",
    "persistent": false
  },
  "permissions": [
    "background",
    "clipboardWrite",
    "alarms",
    "notifications",
    "https://*/*",
    "https://slack.com/api/*"
  ]
}
