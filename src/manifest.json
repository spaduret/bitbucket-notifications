{
  "manifest_version": 3,
  "name": "Bitbucket Notifications",
  "version": "1.0",
  "description": "Bitbucket Notifications",
  "action": {
    "default_icon": "assets/bitbucket.png",
    "default_popup": "/index.html"
  },
  "options_ui": {
    "page": "/index.html#options",
    "open_in_tab": true
  },
  "permissions": [
    "background",
    "notifications"
  ],
  "host_permissions": [
    "https://*/*"
  ]
}
