{
  "manifest_version": 2,
  "name": "Bitbucket Notifications",
  "version": "1.0",
  "description": "Bitbucket Notifications",
  "browser_action": {
    "default_icon": "assets/bitbucket.png",
    "default_popup": "/index.html"
  },
  "options_ui": {
    "page": "/index.html#options",
    "open_in_tab": true
  },
  "background": {
    "page": "/index.html#background",
    "persistent": false
  },
  "permissions": [
    "background",
    "alarms",
    "notifications",
    "https://*/*"
  ]
}
